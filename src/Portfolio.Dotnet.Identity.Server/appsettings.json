{
  "ConnectionStrings": {
    "DefaultConnection": "Server=%ConnectionStrings_DefaultConnection_Server%;Database=%ConnectionStrings_DefaultConnection_Database%;User Id=%ConnectionStrings_DefaultConnection_UserId%;Password=%ConnectionStrings_DefaultConnection_Password%;MultipleActiveResultSets=True;TrustServerCertificate=True;"
  },
  "ApplicationSettings": {
    "AccessTokenLifetimeInSeconds": "%Auth_AccessTokenLifetime%",
    "IdentityTokenLifetimeInSeconds": "%Auth_IdentityTokenLifetimeInSeconds%",
    "IssuerUrl": "",
    "ExternalIdentityProviders": {
      "Azure": {
        "Enabled": true,
        "ClientId": "%Azure_ClientId%",
        "TenantId": "%Azure_TenantId%"
      },
      "Google": {
        "Enabled": true,
        "ClientId": "%Google_ClientId%",
        "ClientSecret": "%Google_ClientSecret%"
      },
      "PrioritizeManageUsersWhenLinking": true
    },
    "Email": {
      "Enabled": "%Email_Enabled%",
      "From": "%Email_From%",
      "SendGridApiKey": "%Email_SendGridApiKey%",
      "TestRecipients": "%Email_TestRecipients%"
    },
    "Environment": "%_Environment_%",
    "PasswordPolicy": {
      "RequireDigit": true,
      "RequiredLength": 8,
      "RequiredUniqueChars": 0,
      "RequireLowercase": true,
      "RequireNonAlphanumeric": true,
      "RequireUppercase": true
    },
    "SlidingRefreshTokenLifetimeInSeconds": "%Auth_SlidingRefreshTokenLifetime%",
    "UI": {
      "Title": "Portfolio Login"
    }
  }
}
